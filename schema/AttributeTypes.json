{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "type": {
      "enum": [
        "attributeTypes"
      ]
    },
    "attributeTypes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/AttributeType"
      }
    }
  },
  "definitions": {
    "AttributeType": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "value"
            ]
          }
        },
        "defaultType": {
          "type": "string"
        },
        "defaultLength": {
          "type": "integer"
        },
        "defaultPrecision": {
          "type": "integer"
        },
        "defaultScale": {
          "type": "integer"
        },
        "hasUnit": {
          "enum": [
            "NoUnit",
            "Physical",
            "Currency",
            "UnitFree"
          ],
          "type": "string"
        },
        "isUnit": {
          "enum": [
            "NoUnit",
            "Physical",
            "Currency"
          ],
          "type": "string"
        },
        "canBeInRelation": {
          "type": "boolean",
          "default": "False"
        },
        "isDefaultProperty": {
          "type": "boolean",
          "default": "False"
        }
      },
      "required": [
        "name",
        "displayName",
        "defaultType"
      ]
    }
  }
}