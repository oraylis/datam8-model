{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "schemaVersion": {
      "type": "string",
      "description": "Version of the schema for validation and migration support"
    },
    "modelPath": {
      "type": "string",
      "default": "Model",
      "description": "Root path for model entities, replacing zone-specific paths"
    },
    "basePath": {
      "type": "string",
      "default": "Base"
    },
    "generatePath": {
      "type": "string",
      "default": "Generate"
    },
    "diagramPath": {
      "type": "string",
      "default": "Diagram"
    },
    "outputPath": {
      "type": "string",
      "default": "Output"
    }
  },
  "required": [
    "schemaVersion",
    "basePath",
    "modelPath",
    "generatePath",
    "outputPath",
    "diagramPath"
  ]
}